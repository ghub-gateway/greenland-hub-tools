desc "Common geospatial applications: netCDF4, cdo, nco, pyproj, rasterio, georaster, gdal"
tags MATHSCI

# installed in an eponymous Python environment.
#
# In a user shell it can also be accessed this way:
#   conda activate geospatial_anaconda_6
# and then deactivated:
#   conda deactivate 

# Path must be updated to use the environment's executables:
# These were found from "conda info --envs"
setenv PATH /apps/share64/debian10/anaconda/anaconda-6/bin:/apps/share64/debian10/anaconda/anaconda-6/envs/geospatial_anaconda_6/bin:/apps/share64/debian10/anaconda/anaconda-6/condabin:/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games:/apps/bin

# more selections from env
setenv GSETTINGS_SCHEMA_DIR=/apps/share64/debian10/anaconda/anaconda-6/envs/geospatial_anaconda_6/share/glib-2.0/schemas
setenv ENVIRON_CONFIG_DIRS=/etc/environ.d  /apps/share64/debian10/environ.d
setenv UDUNITS2_XML_PATH=/apps/share64/debian10/anaconda/anaconda-6/envs/geospatial_anaconda_6/share/udunits/udunits2.xml
setenv F90=/apps/share64/debian10/anaconda/anaconda-6/bin/x86_64-conda_cos6-linux-gnu-gfortran
setenv GDAL_DATA=/apps/share64/debian10/anaconda/anaconda-6/envs/geospatial_anaconda_6/share/gdal

# for completeness we can specify the PROJ_LIB from working os.environ
setenv PROJ_LIB=/apps/share64/debian10/anaconda/anaconda-6/envs/geospatial_anaconda_6/share/proj
setenv ANACONDA_CHOICE anaconda-6
